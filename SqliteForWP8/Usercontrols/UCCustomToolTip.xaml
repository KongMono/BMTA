    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Background="#FFFFFF" BorderBrush="Gray"  CornerRadius="10" Height="120" Width="350"  x:Name="imgborderg"  HorizontalAlignment="Center" Visibility="Collapsed" >
            <!--<TextBlock  x:Name="Lbltext" FontSize="20" Foreground="White" Text="This is Description on ToolTip" TextWrapping="Wrap" Margin="5,5,5,5" />-->

            <Button x:Name="imgborder"  Tag="{Binding id}" CommandParameter="{Binding latitude}" Height="120" Width="350" BorderBrush="{x:Null}" Style="{StaticResource btimgorder}" BorderThickness="0" VerticalAlignment="Top">
                <TextBlock  x:Name="Lbltext" FontSize="18"  Foreground="Black" Text="This is Description on ToolTip" TextWrapping="Wrap" TextAlignment="Left" Height="120" FlowDirection="LeftToRight" Width="260" Margin="65,-20,0,0" VerticalAlignment="Top" />
            </Button>
        </Border>
        <Image Height="120" Name="imginfo" Width="85" Margin="0,-120,0,0" HorizontalAlignment="Left" Source="/Assets/left_infobox.png" VerticalAlignment="Top" Stretch="Fill" Visibility="Collapsed"/>

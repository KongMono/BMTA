<UserControl x:Class="BMTA.Usercontrols.UCLandMarkItem"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:Toolkit="clr-namespace:Microsoft.Phone.Maps.Toolkit;assembly=Microsoft.Phone.Controls.Toolkit"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignWidth="480" d:DesignHeight="80">

    <Grid Tap="Grid_Tap">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="pin" HorizontalAlignment="Center" Width="30" Height="40" VerticalAlignment="Center"  Source="/Assets/pin_blue.png" Stretch="Fill" />
        <TextBlock x:Name="TextLandMark" Grid.Column="1" Text="สถานที่" Foreground="Black" VerticalAlignment="Center"  HorizontalAlignment="Left"/>
    </Grid>
</UserControl>